{
    "name": "incubatrix/dbal-manager",
    "description": "Incubatrix DBAL Manager Package",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": ">=8.2",
        "doctrine/dbal": "^4.2",
        "symfony/console": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/event-dispatcher": "^6.4",
        "symfony/dependency-injection": "^6.4",
        "symfony/config": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Incubatrix\\DbalManager\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Running post-install-cmd...'",
            "cp vendor/incubatrix/dbal-manager/src/Resources/config/incubatrix_dbal_manager.yaml config/packages/incubatrix_dbal_manager.yaml || echo 'Error copying file!'"
        ],
        "post-update-cmd": [
            "echo 'Running post-update-cmd...'",
            "cp vendor/incubatrix/dbal-manager/src/Resources/config/incubatrix_dbal_manager.yaml config/packages/incubatrix_dbal_manager.yaml || echo 'Error copying file!'"
        ]
    }
}
